{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "created_at",
      "updated_at",
      "scraped_text_file_version_id",
      "extract_prompt_version_id",
      "mfg_etld1",
      "keyword_type",
      "chunk_bounds",
      "chunk_text",
      "chunk_no",
      "last_chunk_no",
      "chunk_extracted_at",
      "chunk_search_stats",
      "correction_logs"
    ],
    "additionalProperties": false,
    "properties": {
      "_id": {
        "bsonType": "objectId"
      },
      "created_at": {
        "bsonType": "date"
      },
      "updated_at": {
        "bsonType": "date"
      },
      "scraped_text_file_version_id": {
        "bsonType": "string"
      },
      "extract_prompt_version_id": {
        "bsonType": "string"
      },
      "mfg_etld1": {
        "bsonType": "string"
      },
      "keyword_type": {
        "enum": ["products"]
      },
      "chunk_bounds": {
        "bsonType": "string"
      },
      "chunk_text": {
        "bsonType": "string"
      },
      "chunk_no": {
        "bsonType": "int"
      },
      "last_chunk_no": {
        "bsonType": "int"
      },
      "chunk_extracted_at": {
        "bsonType": "date"
      },
      "chunk_search_stats": {
        "bsonType": "object",
        "required": ["results"],
        "additionalProperties": false,
        "properties": {
          "results": {
            "bsonType": "array",
            "uniqueItems": true,
            "items": {
              "bsonType": "string"
            }
          }
        }
      },
      "correction_logs": {
        "bsonType": "array",
        "items": {
          "bsonType": "object",
          "required": ["created_at", "result_correction"],
          "properties": {
            "created_at": {
              "bsonType": "date"
            },
            "result_correction": {
              "bsonType": "object",
              "required": ["author_email", "add", "remove"],
              "properties": {
                "author_email": {
                  "bsonType": "string"
                },
                "source": {
                  "bsonType": "string",
                  "enum": ["user_form", "api_survey"]
                },
                "add": {
                  "bsonType": "array",
                  "items": {
                    "bsonType": "string"
                  }
                },
                "remove": {
                  "bsonType": "array",
                  "items": {
                    "bsonType": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}

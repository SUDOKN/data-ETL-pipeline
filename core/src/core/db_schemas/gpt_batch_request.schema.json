{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "created_at",
      "updated_at",
      "num_batches_paired_with",
      "request"
    ],
    "additionalProperties": false,
    "properties": {
      "_id": {
        "bsonType": "objectId"
      },
      "created_at": {
        "bsonType": "date",
        "description": "Timestamp when the batch request was created"
      },
      "updated_at": {
        "bsonType": "date",
        "description": "Timestamp when the batch request was last updated"
      },
      "num_batches_paired_with": {
        "bsonType": "int",
        "minimum": 0,
        "description": "Number of batches this request has been paired with"
      },
      "request": {
        "bsonType": "object",
        "required": ["custom_id", "method", "url", "body"],
        "additionalProperties": false,
        "properties": {
          "custom_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Custom ID provided for the request"
          },
          "method": {
            "bsonType": "string",
            "enum": ["POST"],
            "description": "HTTP method for the request (defaults to POST)"
          },
          "url": {
            "bsonType": "string",
            "minLength": 1,
            "description": "API endpoint URL (defaults to /v1/chat/completions)"
          },
          "body": {
            "bsonType": "object",
            "required": ["model", "messages", "input_tokens", "max_tokens"],
            "additionalProperties": false,
            "properties": {
              "model": {
                "bsonType": "string",
                "minLength": 1,
                "description": "GPT model name (e.g., gpt-4o-mini)"
              },
              "messages": {
                "bsonType": "array",
                "minItems": 1,
                "items": {
                  "bsonType": "object"
                },
                "description": "Array of message objects for the chat completion"
              },
              "input_tokens": {
                "bsonType": "int",
                "minimum": 0,
                "description": "Number of input tokens (excluded before sending to OpenAI)"
              },
              "max_tokens": {
                "bsonType": "int",
                "minimum": 1,
                "description": "Maximum number of tokens to generate"
              }
            }
          }
        }
      },
      "batch_id": {
        "bsonType": ["string", "null"],
        "description": "OpenAI batch ID, known after batch is uploaded"
      },
      "response_parse_errors": {
        "bsonType": "array",
        "items": {
          "bsonType": "object"
        },
        "description": "List of parse error objects encountered when processing the response"
      },
      "response_blob": {
        "bsonType": ["object", "null"],
        "required": ["batch_id", "request_custom_id", "response"],
        "properties": {
          "batch_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Batch ID from OpenAI (e.g., 'batch_req_123')"
          },
          "request_custom_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Custom ID matching the request (e.g., 'request-2')"
          },
          "response": {
            "bsonType": "object",
            "required": ["status_code", "body"],
            "additionalProperties": false,
            "properties": {
              "status_code": {
                "bsonType": "int",
                "description": "HTTP status code of the response (e.g., 200)"
              },
              "body": {
                "bsonType": "object",
                "required": ["created", "choices", "usage"],
                "additionalProperties": false,
                "properties": {
                  "created": {
                    "bsonType": "date",
                    "description": "Creation timestamp (epoch time converted to datetime)"
                  },
                  "choices": {
                    "bsonType": "array",
                    "minItems": 1,
                    "items": {
                      "bsonType": "object",
                      "required": ["index", "message"],
                      "additionalProperties": false,
                      "properties": {
                        "index": {
                          "bsonType": "int",
                          "minimum": 0,
                          "description": "Choice index"
                        },
                        "message": {
                          "bsonType": "object",
                          "required": ["role", "content"],
                          "additionalProperties": false,
                          "properties": {
                            "role": {
                              "bsonType": "string",
                              "description": "Role of the message (e.g., 'assistant')"
                            },
                            "content": {
                              "bsonType": "string",
                              "description": "Message content"
                            }
                          }
                        }
                      }
                    }
                  },
                  "usage": {
                    "bsonType": "object",
                    "required": [
                      "prompt_tokens",
                      "completion_tokens",
                      "total_tokens"
                    ],
                    "additionalProperties": false,
                    "properties": {
                      "prompt_tokens": {
                        "bsonType": "int",
                        "minimum": 0,
                        "description": "Number of prompt tokens used"
                      },
                      "completion_tokens": {
                        "bsonType": "int",
                        "minimum": 0,
                        "description": "Number of completion tokens generated"
                      },
                      "total_tokens": {
                        "bsonType": "int",
                        "minimum": 0,
                        "description": "Total tokens used (prompt + completion)"
                      }
                    }
                  }
                }
              }
            }
          },
          "error": {
            "bsonType": ["object", "null"],
            "description": "Error information if the batch request failed"
          }
        },
        "description": "Response from GPT batch API"
      }
    }
  }
}

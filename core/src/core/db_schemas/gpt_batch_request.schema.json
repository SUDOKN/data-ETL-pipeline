{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["created_at", "request"],
    "additionalProperties": false,
    "properties": {
      "_id": {
        "bsonType": "objectId"
      },
      "created_at": {
        "bsonType": "date",
        "description": "Timestamp when the batch request was created"
      },
      "request": {
        "bsonType": "object",
        "required": ["custom_id", "body"],
        "additionalProperties": false,
        "properties": {
          "custom_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Custom ID provided for the request"
          },
          "method": {
            "bsonType": "string",
            "enum": ["POST"],
            "description": "HTTP method for the request (optional, defaults to POST)"
          },
          "url": {
            "bsonType": "string",
            "description": "API endpoint URL (optional, defaults to /v1/chat/completions)"
          },
          "body": {
            "bsonType": "object",
            "required": ["model", "messages", "input_tokens", "max_tokens"],
            "additionalProperties": false,
            "properties": {
              "model": {
                "bsonType": "string",
                "minLength": 1,
                "description": "GPT model name (e.g., gpt-4o-mini)"
              },
              "messages": {
                "bsonType": "array",
                "minItems": 1,
                "items": {
                  "bsonType": "object"
                },
                "description": "Array of message objects for the chat completion"
              },
              "input_tokens": {
                "bsonType": "int",
                "minimum": 0,
                "description": "Number of input tokens"
              },
              "max_tokens": {
                "bsonType": "int",
                "minimum": 1,
                "description": "Maximum number of tokens to generate"
              }
            }
          }
        }
      },
      "batch_id": {
        "bsonType": ["string", "null"],
        "description": "OpenAI batch ID, known after batch is uploaded"
      },
      "response_blob": {
        "bsonType": ["object", "null"],
        "required": ["batch_id", "request_custom_id", "response"],
        "properties": {
          "batch_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Batch request ID from OpenAI"
          },
          "request_custom_id": {
            "bsonType": "string",
            "minLength": 1,
            "description": "Custom ID matching the request"
          },
          "response": {
            "bsonType": "object",
            "required": ["status_code", "body"],
            "properties": {
              "status_code": {
                "bsonType": "int",
                "description": "HTTP status code of the response"
              },
              "body": {
                "bsonType": "object",
                "required": ["created", "choices", "usage"],
                "properties": {
                  "created": {
                    "bsonType": "date",
                    "description": "Creation timestamp"
                  },
                  "choices": {
                    "bsonType": "array",
                    "minItems": 1,
                    "items": {
                      "bsonType": "object",
                      "required": ["index", "message"],
                      "properties": {
                        "index": {
                          "bsonType": "int",
                          "minimum": 0
                        },
                        "message": {
                          "bsonType": "object",
                          "required": ["role", "content"],
                          "properties": {
                            "role": {
                              "bsonType": "string",
                              "enum": ["assistant", "user", "system"]
                            },
                            "content": {
                              "bsonType": "string"
                            }
                          }
                        }
                      }
                    }
                  },
                  "usage": {
                    "bsonType": "object",
                    "required": [
                      "prompt_tokens",
                      "completion_tokens",
                      "total_tokens"
                    ],
                    "properties": {
                      "prompt_tokens": {
                        "bsonType": "int",
                        "minimum": 0
                      },
                      "completion_tokens": {
                        "bsonType": "int",
                        "minimum": 0
                      },
                      "total_tokens": {
                        "bsonType": "int",
                        "minimum": 0
                      }
                    }
                  }
                }
              }
            }
          },
          "error": {
            "bsonType": ["object", "null"],
            "description": "Error information if the batch request failed"
          }
        },
        "description": "Response from GPT batch API"
      }
    }
  }
}
